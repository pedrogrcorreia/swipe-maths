<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Swipemaths" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_buttons</item>
        <item name="colorPrimaryVariant">@color/background_buttons</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@font/coolvetica_condensed_rg</item>
        <item name="materialButtonStyle">
            @style/MyButton
        </item>
    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/oswald_light</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/background_buttons</item>
    </style>
</resources>