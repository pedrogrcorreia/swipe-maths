<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GameScreenActivity"
    android:orientation="vertical"
    android:id="@+id/lLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/points"
        android:textSize="20sp"
        android:id="@+id/lblPoints"/>
    <fragment
        tools:layout="@layout/fragment_level_info"
        android:id="@+id/fragmentLvlInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:name="pt.isec.swipe_maths.fragments.LevelInfoFragment"/>

    <include layout="@layout/content_game_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <fragment
        tools:layout="@layout/fragment_players_info"
        android:id="@+id/fragmentPlayersInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:name="pt.isec.swipe_maths.fragments.PlayersInfoFragment" />



</LinearLayout>