<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GameScreenActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_margin="8dp"
            android:padding="20dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/level"
            android:id="@+id/lblLevel"/>
        <TextView
            android:layout_margin="8dp"
            android:padding="20dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/timer"
            android:id="@+id/timer"/>
    </LinearLayout>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="pt.isec.swipe_maths.fragments.GameBoardFragment"
        tools:layout="@layout/fragment_game_board"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:id="@+id/fragmentGameBoard"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/answers"
        android:layout_margin="10dp"
        android:id="@+id/lblAnswers"/>

</LinearLayout>