<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:id="@+id/frLayout">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:textColor="@color/black"
        android:paddingEnd="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/credits"
        android:id="@+id/btnCredits"
        android:layout_gravity="top|end"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settings"
        android:background="?android:selectableItemBackground"
        android:textSize="24sp"
        android:paddingEnd="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="top|end"
        android:id="@+id/userProfile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:padding="32dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_gravity="top|start"
            android:layout_marginStart="8dp"
            android:id="@+id/loginLayout">
            <Button
                android:id="@+id/email_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:layout_weight="1"
                android:gravity="start|center"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/coolvetica_condensed_rg"
                android:text="@string/sign_in_with_email"/>
            <Button
                android:id="@+id/signUpButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:selectableItemBackground"
                android:layout_gravity="center_horizontal"
                android:gravity="start|center"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/coolvetica_condensed_rg"
                android:text="@string/sign_up"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="top|start"
            android:layout_marginStart="8dp"
            android:layout_weight="0.5"
            android:id="@+id/cardViewUser"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="6dp"
                android:weightSum="2.5"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:id="@+id/userPhoto"
                    android:layout_gravity="center"
                    android:src="@drawable/teste"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/coolvetica_condensed_rg"
                    android:layout_gravity="center"
                    android:id="@+id/welcomeTxt"
                    android:text="@string/welcome"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginVertical="50dp"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:fontFamily="@font/reach_story"
                    android:text="@string/swipe"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:fontFamily="@font/reach_story"
                    android:text="@string/maths"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:layout_gravity="bottom|center_horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/single"
            android:textSize="24sp"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:id="@+id/singlePlayer"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/multi"
            android:textSize="24sp"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:id="@+id/multiPlayer"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/high_scores"
            android:textSize="24sp"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:id="@+id/highScores"/>
    </LinearLayout>
</FrameLayout>